root = true;

[*]
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = "utf-8"

[*.{json,md,yml}]
indent_size = 2

[{README.md}]
indent_style = space
indent_size = 2

# Ignore paths
[/vendor/style/normalize.css]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset

